.d-flex
  .flex-grow-1
    = render 'shared/filter'
  - if current_user.present?
    = modal_link_to "New #{Project.model_name.human}", new_project_path, class: 'btn btn-primary ml-2'

.results
  - if @projects.present?
    - @projects.each do |project|
      .card.mt-3
        .card-header
          = content_link_to(project.title, project)
          %small= l(project.created_at, format: :short)
        .card-body
          = project.subtitle

    = render 'shared/pagination', record: @projects
  - else
    = no_records_available do
      %span.text-muted We do not have any projects yet. You can
      %span.font-weight-bold= help_link(new_project_path)
      %span.text-muted to fill this gap.
