!!!
%html{lang: I18n.locale}

  %head
    %meta(charset='utf-8')
    %meta(http-equiv='x-ua-compatible' content='ie=edge')
    %meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    %meta(name='description' content='Pitch and find open-source web applications')

    %link{href: asset_pack_path('assets/images/favicon.ico'), rel: 'ico', type: 'image/x-icon'}
    %link{href: asset_pack_path('assets/images/favicon.png'), rel: 'ico', type: 'image/png'}

    = csrf_meta_tags

    %title
      Wintermute

    = javascript_pack_tag 'application'
    = stylesheet_pack_tag 'application'

  %body{data: {env: Rails.env}}

    .container
      = render 'layouts/navigation'
      = render 'layouts/flashes'

      .content
        = yield
