- content_for(:navigation_left) do
  = <%= class_name %>.model_name.human(count: 2)
%table.table
  %thead
    %tr
<% for attribute in attributes -%>
      %th <%= attribute.human_name %>
<% end -%>
      %th
      %th
      %th

  %tbody
    - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
      %tr
<% for attribute in attributes -%>
        %td= <%= singular_table_name %>.<%= attribute.name %>
<% end -%>
        %td= content_link_to 'Show', <%= singular_table_name %>
        %td= content_link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>)
        %td= content_link_to 'Destroy', <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' }

%br

= content_link_to 'New <%= human_name %>', new_<%= singular_table_name %>_path
